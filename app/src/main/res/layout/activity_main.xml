<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ffmpeg.test.cxh.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放原视频"
        android:id="@+id/btnPlayOld"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频转换"
        android:id="@+id/btnPlayTra"
        android:layout_alignBottom="@+id/btnPlayOld"
        android:layout_toRightOf="@+id/btnPlayOld"
        android:layout_toEndOf="@+id/btnPlayOld" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放新视频"
        android:id="@+id/btnPlayNew"
        android:layout_alignBottom="@+id/btnPlayTra"
        android:layout_toRightOf="@+id/btnPlayTra"
        android:layout_toEndOf="@+id/btnPlayTra" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_below="@+id/btnPlayOld"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
